{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "types": ["@nuxt/types", "@nuxt/schema"],  // important for plugins
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    }
  },
  "exclude": [".nuxt", "node_modules"]
}
